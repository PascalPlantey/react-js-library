{
  "source": {
    "include": ["./src"],
    "includePattern": ".+\\.js(doc|x)?$",
    "exclude": [
      "node_modules", "dist", "doc", "src/stories"
    ]
  },
  "plugins": ["plugins/markdown", "plugins/summarize"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "recurse": true,
    "template": "node_modules/docdash",
    "destination": "./docs/"
  },
  "docdash": {
    "search": true,
    "collapse": true
  }
}